OPENAI_MODEL_NAME_P9=your_openai_model_name_here


# ==================== 游戏配置 ====================

# 最大游戏轮数
MAX_GAME_ROUND=30

# 每个狼人的最大讨论轮数
MAX_DISCUSSION_ROUND=3

# ==================== AgentScope Studio 配置 ====================

# 是否启用 Studio 可视化
ENABLE_STUDIO=false

# Studio URL
STUDIO_URL=http://localhost:3001

# 项目名称
STUDIO_PROJECT=werewolf_game

# ==================== 经验存档配置 ====================

# 玩家经验存档目录（相对于项目根目录）
EXPERIENCE_DIR=./data/experiences

# 经验存档文件名前缀
EXPERIENCE_ID=players_experience


# ==================== 经验分析配置 ====================
# 是否在游戏结束后自动进行数据分析（true/false，默认是false）
AUTO_ANALYZE=false

# （可选）数据分析独立模型配置：不填则默认使用上面的共用配置
# ANALYSIS_OPENAI_API_KEY=your_openai_api_key_here
# ANALYSIS_OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4/
# ANALYSIS_OPENAI_MODEL_NAME=glm-4.5-air
